@model TaskManagement.ViewModels.RegisterViewModel
@{
  ViewData["Title"] = "Регистрация";
}
<div class="d-flex justify-content-center align-items-center mt-5">
  <div class="card" style="background-color: #fff; width: 280px; border-radius: 33px; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);padding: 2rem !important;">
    <form asp-action="Register">
      <label style="margin-bottom:20px; margin-left:5px; font:bold">Регистрация</label>
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <div class="form-group" style="margin-bottom:10px">
        <label asp-for="Name" class="control-label" style="padding-left: 5px"></label>
        <input asp-for="Name" class="form-control" style="border-radius: 33px"/>
        <span asp-validation-for="Name" class="text-danger"></span>
      </div>
      <div class="form-group" style="margin-bottom:10px">
        <label asp-for="Password" class="control-label" style="padding-left: 5px"></label>
        <input asp-for="Password" class="form-control" style="border-radius: 33px"/>
        <span asp-validation-for="Password" class="text-danger"></span>
      </div>
      <div class="form-group" style="margin-bottom:10px">
        <label asp-for="PasswordConifrm" class="control-label" style="padding-left: 5px"></label>
        <input asp-for="PasswordConifrm" class="form-control" style="border-radius: 33px"/>
        <span asp-validation-for="PasswordConifrm" class="text-danger"></span>
      </div>
      <div class="form-group" style="margin-bottom:20px">
        <label asp-for="Email" class="control-label style=" style="padding-left: 5px"></label>
        <input asp-for="Email" class="form-control" style="border-radius: 33px" />
        <span asp-validation-for="Email" class="text-danger"></span>
      </div>
      <div class="form-group">
        <input type="submit" value="Register" class="btn btn-primary" style="color:#fff;background-color: #0d6efd; border-color: #0d6efd; margin-top: 20px; margin-bottom:10px; border-radius: 33px;" />
      </div>
    </form>
  </div>
</div>
